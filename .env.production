DOMAIN=chat.example.com
POSTGRES_USER=anonchat
POSTGRES_PASSWORD=change-me
POSTGRES_DB=anonchat
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
REDIS_URL=redis://redis:6379
JWT_SECRET=change-me-super-secret
ADMIN_USER=admin
ADMIN_PASS=change-me
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200
LOG_BUFFER_SIZE=200
PORT=3000
APP_VERSION=2.1.0
TRUST_PROXY=loopback
MAINTENANCE_MESSAGE=We are performing scheduled maintenance. Please try again shortly.
CLIENT_MAX_BODY_SIZE=20m
REAL_IP_FROM=10.0.0.0/8
CSP_POLICY=default-src 'self'; connect-src 'self' wss:; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; frame-ancestors 'none'

# Storage paths
UPLOADS_DIR=/uploads
UPLOADS_PUBLIC_URL=https://chat.example.com/uploads
UPLOADS_TMP_DIR=/tmp/uploads

# Storage mode: LOCAL or S3 (MinIO compatible)
STORAGE_MODE=LOCAL
S3_BUCKET=anon-chat
S3_REGION=us-east-1
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PUBLIC_URL=https://cdn.example.com/anon-chat

# Rate limiting profiles
CHAT_WINDOW_SEC=5
CHAT_MAX=20
UPLOAD_WINDOW_SEC=600
UPLOAD_MAX=10
ADMIN_LOGIN_WINDOW_SEC=600
ADMIN_LOGIN_MAX=5

# Optional container label
CONTAINER_ID=
